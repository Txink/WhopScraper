# ============================================================
# Whop 平台配置
# ============================================================

# 登录凭据
WHOP_EMAIL=your_email@example.com
WHOP_PASSWORD=your_password

# 监控页面配置（支持多个页面，用逗号分隔）
# 期权页面
WHOP_OPTION_PAGES=https://whop.com/joined/stock-and-option/-gZyq1MzOZAWO98/app/
# 正股页面
WHOP_STOCK_PAGES=https://whop.com/joined/stock-and-option/-JG1I58S5zTHbxs/app/

# 页面类型启用控制
ENABLE_OPTION_MONITOR=true    # 是否监控期权页面
ENABLE_STOCK_MONITOR=false    # 是否监控正股页面

# 浏览器设置
HEADLESS=false                 # 是否无头模式运行
SLOW_MO=0                      # 浏览器操作延迟（毫秒）

# 监控设置
POLL_INTERVAL=2.0              # 轮询间隔（秒）

# 登录页面URL（一般不需要修改）
LOGIN_URL=https://whop.com/login/

# ============================================================
# LongPort 交易配置
# ============================================================

# 账户模式
LONGPORT_MODE=paper            # paper=模拟账户, real=真实账户

# API 凭据（模拟账户）
LONGPORT_PAPER_APP_KEY=
LONGPORT_PAPER_APP_SECRET=
LONGPORT_PAPER_ACCESS_TOKEN=

# API 凭据（真实账户）
LONGPORT_REAL_APP_KEY=
LONGPORT_REAL_APP_SECRET=
LONGPORT_REAL_ACCESS_TOKEN=

# LongPort 通用配置
LONGPORT_REGION=cn             # cn=中国大陆, hk=香港
LONGPORT_ENABLE_OVERNIGHT=false  # 是否开启夜盘行情

# 风险控制
LONGPORT_MAX_POSITION_RATIO=0.20  # 单仓位上限（20%）
LONGPORT_MAX_DAILY_LOSS=0.05      # 单日止损（5%）
LONGPORT_MIN_ORDER_AMOUNT=100     # 最小下单金额（$100）

# 交易模式
LONGPORT_AUTO_TRADE=false      # 是否启用自动交易
LONGPORT_DRY_RUN=true          # 是否启用模拟模式（不实际下单）

# ============================================================
# 消息展示配置
# ============================================================

# 控制台展示模式
# raw: 仅显示原始消息
# parsed: 仅显示解析后的指令
# both: 同时显示原始消息和解析结果
DISPLAY_MODE=both

# 日志级别
LOG_LEVEL=INFO                 # DEBUG, INFO, WARNING, ERROR

# ============================================================
# 样本和数据集配置
# ============================================================

# 样本收集
ENABLE_SAMPLE_COLLECTION=true  # 是否启用样本收集
SAMPLE_DATA_DIR=samples/data   # 样本数据目录

# ============================================================
# 存储路径配置
# ============================================================

STORAGE_STATE_PATH=.auth/whop_state.json  # Cookie 存储路径
OUTPUT_FILE=output/signals.json           # 输出文件路径
POSITION_FILE=data/positions.json         # 持仓文件路径
LOG_DIR=logs                              # 日志目录
